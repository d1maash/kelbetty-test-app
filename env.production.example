# Production Environment Variables
# Скопируйте этот файл в .env.production и заполните реальными значениями

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=your-username/kelbetty-app
IMAGE_TAG=latest

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL="postgresql://kelbetty_user:your_secure_postgres_password_here@postgres:5432/kelbetty?schema=public"

# Clerk Authentication (Production keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_key_here
CLERK_SECRET_KEY=sk_live_your_production_secret_here

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# Google Gemini AI (Production)
GEMINI_API_KEY=your_production_gemini_api_key_here

# Clerk Pro Plan (Production)
CLERK_PRO_PLAN_ID=your_production_pro_plan_id_here

# Upload settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_password_here

# Security
# Генерируйте случайные пароли для продакшена
# Используйте: openssl rand -base64 32
