# Staging Environment Variables
# Скопируйте этот файл в .env.staging и заполните реальными значениями

# Docker Registry
REGISTRY=ghcr.io
IMAGE_NAME=your-username/kelbetty-app
IMAGE_TAG=staging

# Database
POSTGRES_PASSWORD=staging_postgres_password
DATABASE_URL="postgresql://kelbetty_user:staging_postgres_password@postgres:5432/kelbetty_staging?schema=public"

# Clerk Authentication (Staging/Test keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_staging_key_here
CLERK_SECRET_KEY=sk_test_your_staging_secret_here

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# Google Gemini AI (Staging)
GEMINI_API_KEY=your_staging_gemini_api_key_here

# Clerk Pro Plan (Staging)
CLERK_PRO_PLAN_ID=your_staging_pro_plan_id_here

# Upload settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
